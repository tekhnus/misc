#!/bin/bash

rm -rf /tmp/crsh-command
mkfifo /tmp/crsh-command

rm -rf /tmp/crsh-result
mkfifo /tmp/crsh-result

scp crsh-server ma:/home/zahaaar/.local/bin
echo 'remote did copy the script' >>/tmp/crsh-log

{
	ssh -T ma 'cat -u >/tmp/crsh-command' </tmp/crsh-command
}&
echo 'remote started command forwarding' >>/tmp/crsh-log
{
	ssh ma -T 'cat -u /tmp/crsh-result' >/tmp/crsh-result
}&
echo 'remote started result backwarding' >>/tmp/crsh-log

ssh ma crsh-server
